<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffdfeaf1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/my_title"
        android:textSize="20sp" />

    <Button
        android:id="@+id/mediaBtn"
        style="@style/customButton"
        android:layout_below="@+id/textView"
        android:tag="1"
        android:text="@string/media_streamer" />

    <Button
        android:id="@+id/scoresBtn"
        style="@style/customButton"
        android:layout_below="@+id/mediaBtn"
        android:tag="2"
        android:text="@string/scores_app" />

    <Button
        android:id="@+id/libBtn"
        android:layout_below="@+id/scoresBtn"
        style="@style/customButton"
        android:tag="3"
        android:text="@string/lib_app" />

    <Button
        android:id="@+id/buildBigBtn"
        android:layout_below="@+id/libBtn"
        style="@style/customButton"
        android:tag="4"
        android:text="@string/build_big" />

    <Button
        android:id="@+id/xyzBtn"
        android:layout_below="@+id/buildBigBtn"
        style="@style/customButton"
        android:tag="5"
        android:text="@string/xyz_read" />

    <Button
        android:id="@+id/capBtn"
        android:layout_below="@+id/xyzBtn"
        style="@style/customButton"
        android:background="@color/cap"
        android:tag="6"
        android:text="@string/capstone_app" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
